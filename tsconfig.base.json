{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bookingsmart-workspace/shared-types": ["libs/shared-types/src/index.ts"],
      "@/*": ["apps/backoffice-fe/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp", ".nuxt", ".output"]
}
