{
  "name": "storefront-bff",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "services/spring-backend/storefront-bff/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/target"
      ],
      "inputs": [
        "{projectRoot}/**/*.java",
        "{projectRoot}/pom.xml",
        "{workspaceRoot}/services/spring-backend/pom.xml",
        "{workspaceRoot}/services/spring-backend/common-lib/**/*.java"
      ],
      "options": {
        "command": "mvn clean package -DskipTests -pl storefront-bff -am",
        "cwd": "services/spring-backend"
      },
      "cache": true,
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": [
        "services/spring-backend/storefront-bff/target/surefire-reports"
      ],
      "inputs": [
        "{projectRoot}/**/*.java",
        "{projectRoot}/pom.xml",
        "{workspaceRoot}/services/spring-backend/pom.xml",
        "{workspaceRoot}/services/spring-backend/common-lib/**/*.java"
      ],
      "options": {
        "command": "mvn test -pl storefront-bff",
        "cwd": "services/spring-backend"
      },
      "cache": true
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/Dockerfile",
        "{projectRoot}/target/*.jar"
      ],
      "options": {
        "command": "docker build -t phamduyhuyuit/bookingsmart-storefront-bff:latest .",
        "cwd": "services/spring-backend/storefront-bff"
      },
      "dependsOn": [
        "build"
      ]
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run phamduyhuyuit/bookingsmart-storefront-bff:latest",
        "cwd": "services/spring-backend/storefront-bff"
      },
      "dependsOn": [
        "docker-build"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn spring-boot:run -pl storefront-bff",
        "cwd": "services/spring-backend"
      }
    }
  },
  "tags": [
    "backend",
    "microservice",
    "spring-boot"
  ]
}