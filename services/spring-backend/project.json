{
  "name": "spring-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "services/spring-backend",
  "targets": {
    "build-all": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/**/*.java",
        "{projectRoot}/**/pom.xml",
        "{projectRoot}/**/*.properties",
        "{projectRoot}/**/*.yml",
        "{projectRoot}/**/*.yaml"
      ],
      "options": {
        "command": "mvn clean package -DskipTests",
        "cwd": "services/spring-backend"
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn test",
        "cwd": "services/spring-backend"
      },
      "cache": true
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn clean",
        "cwd": "services/spring-backend"
      },
      "cache": false
    },
    "install-all": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/**/*.java",
        "{projectRoot}/**/pom.xml"
      ],
      "options": {
        "command": "mvn clean install -DskipTests",
        "cwd": "services/spring-backend"
      },
      "cache": true,
      "dependsOn": [
        "clean"
      ]
    },
    "docker-build-all": {
      "executor": "nx:run-commands",
      "inputs": [
        "{workspaceRoot}/docker-compose.yml"
      ],
      "options": {
        "command": "docker compose --profile spring build",
        "cwd": "."
      },
      "cache": true,
      "dependsOn": [
        "build-all"
      ]
    },
    "docker-up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose --profile spring up -d",
        "cwd": "."
      }
    },
    "docker-down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose --profile spring down",
        "cwd": "."
      }
    },
    "full-build": {
      "dependsOn": [
        "build-all",
        "docker-build-all"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Full build completed!'",
        "cwd": "."
      }
    }
  },
  "tags": [
    "backend",
    "monolith",
    "maven"
  ]
}