{
  "name": "storefront-fe",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/storefront-fe/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "nuxt build",
        "cwd": "apps/storefront-fe",
        "outputPath": "dist/apps/storefront-fe"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nuxt dev",
        "cwd": "apps/storefront-fe"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nuxt dev",
        "cwd": "apps/storefront-fe"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/storefront-fe/Dockerfile -t phamduyhuyuit/bookingsmart-storefront-fe:latest .",
        "cwd": "."
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -p 3000:3000 --name storefront-fe-container phamduyhuyuit/bookingsmart-storefront-fe:latest"
      }
    }
  },
  "tags": [
    "frontend",
    "application",
    "nuxt"
  ]
}