{
  "name": "storefront-fe",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/storefront-fe",
  "projectType": "application",
  "tags": [
    "frontend",
    "application",
    "nextjs"
  ],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/storefront-fe"
      }
    },
    "dev": {
      "executor": "@nx/next:server",
      "options": {
        "dev": true,
        "port": 3000,
        "buildTarget": "storefront-fe:build"
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "dev": true,
        "port": 3000,
        "buildTarget": "storefront-fe:build"
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "options": {
        "dev": false,
        "port": 3000,
        "buildTarget": "storefront-fe:build"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/storefront-fe/Dockerfile -t phamduyhuyuit/bookingsmart-storefront-fe:latest .",
        "cwd": "."
      },
      "dependsOn": ["build"]
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -p 3000:3000 --name storefront-fe-container phamduyhuyuit/bookingsmart-storefront-fe:latest"
      }
    }
  }
}
