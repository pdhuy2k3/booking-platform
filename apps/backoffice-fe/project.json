{
  "name": "backoffice-fe",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backoffice-fe",
  "projectType": "application",
  "tags": [
    "frontend",
    "application",
    "nextjs"
  ],
  "implicitDependencies": ["shared-types"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/backoffice-fe"
      },
      "cache": true
    },
    "dev": {
      "executor": "@nx/next:server",
      "options": {
        "dev": true,
        "port": 3001,
        "buildTarget": "backoffice-fe:build"
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "dev": true,
        "port": 3001,
        "buildTarget": "backoffice-fe:build"
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "options": {
        "dev": false,
        "port": 3001,
        "buildTarget": "backoffice-fe:build"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependOn": ["build"],
      "options": {
        "context": ".",
        "file": "apps/backoffice-fe/Dockerfile",
        "tags": ["phamduyhuyuit/bookingsmart-backoffice-fe:latest"],
        "load": true
      },
      "configurations": {
        "push": { "push": true, "load": false }
      }

    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -p 3001:3001 --name backoffice-fe-container phamduyhuyuit/bookingsmart-backoffice-fe:latest"
      }
    }
  }
}
